<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SUPIR_GUI.ViewModels"
             xmlns:conv="using:SUPIR_GUI.Converters"
             mc:Ignorable="d"
             x:Class="SUPIR_GUI.Controls.StartButtonAndProgressBar"
             x:DataType="vm:MainWindowViewModel">

    <StackPanel Spacing="12" Margin="24,0,24,16">

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="16">

            <!-- Start button -->
            <Button Command="{Binding UpscaleImageCommand}"
                    IsVisible="{Binding !IsProcessing}"
                    IsEnabled="{Binding IsInitialized}"
                    Classes="accent"
                    Padding="24,10"
                    FontSize="14">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <PathIcon Data="M8 5v14l11-7z"
                              Width="14" Height="14" />
                    <TextBlock Text="アップスケール開始" VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Cancel button -->
            <Button Command="{Binding UpscaleImageCancelCommand}"
                    IsVisible="{Binding IsProcessing}"
                    Padding="24,10"
                    FontSize="14">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                              Width="14" Height="14" />
                    <TextBlock Text="キャンセル" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Progress bar -->
        <ProgressBar IsVisible="{Binding IsProcessing}"
                     IsIndeterminate="{Binding ProgressPercentage, Converter={x:Static conv:NullableDoubleToIsIndeterminateConverter.Instance}}"
                     Value="{Binding ProgressPercentage}"
                     Minimum="0"
                     Maximum="100"
                     Height="20" />
    </StackPanel>
</UserControl>
